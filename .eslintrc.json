{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "plugins": ["jasmine"],
  "extends": ["eslint:recommended", "plugin:jasmine/recommended"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "no-mixed-spaces-and-tabs": 0,
    "no-unused-vars": 2,
    "no-undef": 2,
    "no-console": 2,
    "no-var": 2,
    "no-multiple-empty-lines": 2,
    "no-trailing-spaces": 2,
    "typescript.suggestionActions.enabled": false,
    "indent": ["error", "tab"],
    "quotes": ["error", "single"],
    "prefer-template": 2,
    "space-infix-ops": ["error"],
    "semi": ["error", "always"]
  }
}
